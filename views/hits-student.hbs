    <style>
        @import url('https://fonts.googleapis.com/css2?family=Comfortaa:wght@600&family=Righteous&display=swap');

        :root {
            --transition: 0.4s ease-in;
            --bckg-color: rgb(17, 36, 36);
            --body-color: rgb(29, 65, 65);
            --whitesmoke: #f5f5f5;
            --primary-color: #0f6fff;
        }

        html {
            background-color: var(--bckg-color);
            font-family: 'Comfortaa', cursive;
            color: var(--whitesmoke);
        }

        body {
            max-width: 1200px;
            margin: 0 auto;
        }

        #h1-label {
            font-family: 'Righteous', cursive;
        }

        a {
            text-decoration: none;
            color: var(--primary-color);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            transition: var(--transition);
        }

        .main-wrapper {
            margin-top: 25px;
            border-radius: 5px;
            padding: 20px;
            background-color: var(--body-color);
        }

        .content {
            display: flex;
        }

        .labels-content {
            flex: 3;
        }

        .labels {
            display: flex;
            padding: 10px;


        }

        .data {
            display: grid;
            grid-template-columns: repeat(2, 1fr);

            margin-top: 20px;
        }

        .data>* {
            padding: 10px;
            border-bottom: 1px solid white;
            margin: 10px;
        }


        .labels>* {
            flex: 1;
            text-align: center;
            margin: 10px 40px;
            border-bottom: 3px solid #f1f1f1;
        }

        .labels h1 {
            text-shadow: 3px 3px 3px rgba(0, 0, 0, 1);
            margin: 10px;
        }


        .marks {
            flex: 1;
        }

        ul li {
            list-style-type: none;
            text-shadow: 3px 3px 3px rgba(0, 0, 0, 1);
        }

        ul {
            display: flex;
            gap: 20px;
        }

        nav {
            display: flex;
            justify-content: space-between;
            padding: 20px;
            font-size: 30px;
            align-items: center;
            border-bottom: 3px solid #f1f1f1;
        }

        input {
            padding: 12px 20px;
            margin: 8px 0;
            font-size: 20px;
            border-radius: 10px;
        }

        .login {
            margin-top: 10px;
            border-radius: 5px;
            display: flex;
            flex-direction: column;
            width: 300px;
        }

        .login-wrapper {
            display: flex;
        }

        .flag {
            color: red;
        }

        #star {
            display: flex;
            border-width: 0;
        }

        #star label {
            display: block;

            width: 30px;
            height: 30px;
        }

        .star-svg {
            height: 100%;
            width: 100%;
            stroke: black;

        }

        .star-svg>path {
            transition: none;
        }

        .fill-yellow {
            fill: #ffff00 !important;
        }
    </style>
</head>

